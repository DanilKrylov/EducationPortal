@model CourseCreateViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create course</title>
    <link rel="stylesheet" href="~/css/form.css">
    <link rel="stylesheet" href="~/css/addlink.css">
</head>
<body>
    <div id="wrapper">
        <form id="register" method="post" autocomplete="off">
            <input type="text" required asp-for="Name" placeholder="course name" maxlength="30" minlength="10" />
            <div class="separator"></div>

            <input type="text" required asp-for="Description" maxlength="30" minlength="10" placeholder="course description" />

            <button type="submit">&#xf0da;</button>
            <span asp-validation-for="Name"></span>
            <span asp-validation-for="Description"></span>
        </form>
    </div>
</body>
</html>