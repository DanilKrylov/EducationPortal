@model AddSkillViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add skill</title>
    <link rel="stylesheet" href="~/css/form.css">
    <link rel="stylesheet" href="~/css/addskill.css">
</head>
<body>
    <div id="wrapper">
        <form id="register" method="post" autocomplete="off" asp-route-CourseId="@Model.CourseId">
            <input type="text" required placeholder="enter skill name" asp-for="Name" minlength="5" maxlength="25"/>
            <button type="submit">&#xf0da;</button>
        </form>
    </div>
</body>
</html>